<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrandCars.BrandCars"
    >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/listButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:foregroundGravity="center"
        android:textAlignment="center"
        app:fabCustomSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/list" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topOfPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/carImage"
                    android:layout_width="185dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="130dp"
                    android:layout_marginBottom="17dp"
                    android:foregroundGravity="center"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/placholder"
                    app:civ_border_width="2dp"
                    app:layout_constraintBottom_toTopOf="@+id/carName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/carName"
                    android:layout_width="185dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="130dp"
                    android:gravity="center"
                    android:text="0000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/carImage" />

                <TextView
                    android:id="@+id/carCountryOrigin"
                    android:layout_width="185dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="130dp"
                    android:gravity="center"
                    android:text="0000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/carName" />

                <TextView
                    android:id="@+id/hoursePower"
                    android:layout_width="185dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="130dp"
                    android:gravity="center"
                    android:text="0000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/carCountryOrigin" />


                <TextView
                    android:id="@+id/motorCapacity"
                    android:layout_width="185dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="130dp"
                    android:gravity="center"
                    android:text="0000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hoursePower" />


                <TextView
                    android:id="@+id/bagSpace"
                    android:layout_width="185dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="130dp"
                    android:gravity="center"
                    android:text="0000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/motorCapacity" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="car Categoris"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bagSpace" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/carsCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="75dp"
                android:textAlignment="center"
                app:alignContent="center"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="center">

            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/carColors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="75dp"
                android:textAlignment="center"
                app:alignContent="center"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="center">

            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addCategoryButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:clickable="false"
            android:focusable="auto"
            android:foregroundGravity="center"
            android:textAlignment="center"
            android:visibility="invisible"
            app:backgroundTint="#121212"
            app:fabCustomSize="50dp"
            app:layout_constraintBottom_toTopOf="@+id/ColorAction"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/add" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ColorAction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            android:clickable="false"
            android:focusable="auto"
            android:foregroundGravity="center"
            android:textAlignment="center"
            android:visibility="invisible"
            app:backgroundTint="#121212"
            app:fabCustomSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/colors" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>